{
  "compilerOptions": {
    "target": "es2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "packages/*/src/**/*",
    "packages/*/types/**/*"
  ]
}
