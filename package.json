{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach run --exclude root-workspace-988eec build",
    "clean": "yarn workspaces foreach run --exclude root-workspace-988eec clean",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "test": "yarn tests && yarn lint",
    "lint": "tslint -p tsconfig.json --fix -c tslint.json",
    "watch": "yarn workspaces foreach run --exclude root-workspace-988eec watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@berry/pnpify": "^0.0.4",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.11.3",
    "babel-jest": "^24.8.0",
    "husky": "^0.14.3",
    "jest": "^24.1.0",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix -c tslint.json",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babel"
  }
}
