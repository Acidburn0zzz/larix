{
  "name": "@larix/zen",
  "version": "0.1.0",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint --fix -p tsconfig.json -c tslint.json",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "test": "yarn tests && yarn lint",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysgears/larix.git"
  },
  "bugs": {
    "url": "https://github.com/sysgears/larix/issues"
  },
  "homepage": "https://github.com/sysgears/larix/packages/zen#readme",
  "files": [
    "src",
    "lib",
    "html-plugin-template.ejs",
    "zen.js",
    "webpack.config.js",
    "zen.config.js"
  ],
  "bin": {
    "zen": "./zen.js"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.35",
    "@types/ip": "^0.0.30",
    "@types/jest": "^24.0.6",
    "@types/lodash": "^4.14.71",
    "@types/mkdirp": "^0.5.0",
    "@types/node": "^7.0.18",
    "@types/webpack": "^3.0.10",
    "@types/webpack-sources": "^0.1.2",
    "@types/yargs": "^8.0.2",
    "husky": "^0.14.3",
    "jest": "^24.1.0",
    "lint-staged": "^4.1.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "connect-cors": "^0.5.6",
    "debug": "^3.1.0",
    "detect-port": "^1.2.2",
    "dlv": "^1.1.2",
    "glob": "^7.1.2",
    "humps": "^2.0.1",
    "ip": "^1.1.5",
    "is-docker": "^1.1.0",
    "lodash": "^4.17.4",
    "minilog": "^3.1.0",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.2.0",
    "require-relative": "^0.8.7",
    "serve-static": "^1.13.1",
    "source-list-map": "^2.0.0",
    "source-map": "^0.7.3",
    "source-map-support": "^0.4.15",
    "webpack-merge": "^4.1.0",
    "webpack-sources": "^1.0.1",
    "yargs": "^8.0.2"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      ".history"
    ],
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
