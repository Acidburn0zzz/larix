{
  "name": "larix",
  "version": "0.1.0",
  "description": "Larix Package Manager",
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysgears/larix.git"
  },
  "bugs": {
    "url": "https://github.com/sysgears/larix/issues"
  },
  "homepage": "https://github.com/sysgears/larix/tree/master/packages/larix#readme",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc -p .",
    "watch": "tsc -w",
    "lint": "tslint -p tsconfig.json --fix -c tslint.json",
    "tests": "jest",
    "test": "yarn tests && yarn lint",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "bin": {
    "larix": "larix.js"
  },
  "files": [
    "larix.js",
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.map",
    "templates"
  ],
  "dependencies": {
    "@types/diff": "^3.5.2",
    "axios": "^0.18.0",
    "cachedir": "^2.1.0",
    "chalk": "^2.4.2",
    "diff": "^4.0.1",
    "fs-extra": "^7.0.1",
    "gunzip-maybe": "^1.4.1",
    "source-map-support": "^0.5.6",
    "tar-stream": "^1.6.2",
    "tmp": "^0.0.33",
    "yargs": "^12.0.5",
    "yargs-parser": "^11.1.1",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^7.0.18",
    "@types/tmp": "^0.0.34",
    "prettier": "^1.6.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.2.4"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babel"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
